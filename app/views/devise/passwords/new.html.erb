

<div class="bg-gray-100 min-h-screen flex flex-col flex-1 justify-center items-center">
  <h1 class="my-2 text-2xl text-blue-400 font-bold">Forgot your password</h1>

  <div class="w-1/3 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>  
    
    <div class="mb-6">
      <%= f.label :email, class:"block text-grey-darker text-sm font-bold mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="flex items-center justify-center">
      <%= f.submit "Send me reset password instructions", class:"btn-info" %>
    </div>

      <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>
