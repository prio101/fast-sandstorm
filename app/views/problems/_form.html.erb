<%= form_with(model: problem, local: true) do |form| %>
  
  <div class="flex flex-row flex-1 justify-center">
    <div class="flex flex-1"></div>
    <div class="flex flex-col flex-1">
      <%= form.label  :name %>
      <%= form.text_field  :name, class: "py-2 px-4 border border-gray-400 rounded" %>

      <%= form.label  :link %>
      <%= form.text_field  :link, class: "py-2 px-4 border border-gray-400 rounded" %>

      <%= form.label  :status %>
      <%= form.select  :status, Problem::STATUSES.map { |status| [status , status] } , {} , { class: "py-2 px-4 border border-gray-400 rounded" } %>

      <%= form.label  :site_name %>
      <%= form.select  :site_name, Site::SITENAMES.map {|site| [site, site]} , {} , { class: "py-2 px-4 border border-gray-400 rounded" } %>

      
      <%= form.label  :description %>
      <%= form.rich_text_area  :description, class: "py-2 px-4 border border-gray-400 rounded" %>
      
    </div>
    <div class="flex flex-1"></div>
  </div>
  

  <div class="flex flex-row flex-1 items-center justify-center my-2">
    <%= form.submit "Save Data", class: "btn-primary" %>
  </div>
<% end %>
