<div class="flex flex-col flex-1">
  <div class="flex flex-row flex-1 bg-blue-400">
    <span id="notice" class="text-white"><%= notice %></span>  
  </div>

  <div class="flex flex-row flex-1 justify-center">
    <h1 class="text-xl">Problems</h1>
  </div>
</div>




<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= link_to 'Show', problem %></td>
        <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
        <td><%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Problem', new_problem_path , class: "font-bold text-white px-2 py-2 rounded bg-blue-400" %>
